//empty queue
%t = {  tOneP(producer_p1) 
	, tOneC(consumer_c1)
       #if(1 < KNUM)
       	, tTwoP(producer_p2) 
       	, tTwoC(consumer_c2)
       #endif
       #if(2 < KNUM)
       	, tThreeP(producer_p3) 
       	, tThreeC(consumer_c3)
       #endif
       #if(3 < KNUM)
       	, tFourP(producer_p4) 
       	, tFourC(consumer_c4)
       #endif 
     }
//%t = { tOne(general_one), tTwo(nop) }
%n = { uh }
%p = { 
    
    ready = {  tOneP, tOneC
              #if(1 < KNUM)
              , tTwoP
              , tTwoC
              #endif
              #if(2 < KNUM)
              , tThreeP
              , tThreeC
              #endif
              #if(3 < KNUM)
              , tFourP
              , tFourC
              #endif 
            }
    
    r_by[Tail] = {uh}

    r_by[Tail_seq] = {uh}

    r_by[Head] = {uh}

    r_by[Head_seq] = {uh}

}



