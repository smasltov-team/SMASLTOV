/***********************************
// Pseudo-code
QueueItem * head;
QueueItem * tail;

void producer1() {
  while (nondet()) {
    lock(head);
      QueueItem * q_i = new QueueItem(...);
      tail->next = qi;
      tail = q_i;
    release(head);
  }
}

void consumer1() {
  while (nondet()) {
    lock(head);
      c = head->next;
      if (c != null) {
        cn = c->next;
        head->next = cn;
        c->next = null;
        free(c);
      }
    release(head);
  }
}
************************************/

