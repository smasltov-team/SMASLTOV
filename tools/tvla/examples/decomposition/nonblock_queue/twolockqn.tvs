/*****
* TwoLockQ.tvs
* Initial structure for Two-Lock-Queue implementation.
* Note that the queue must be initialized with a head item (terminator).
* 
* Initial Queue shape
*
* head  tail   tailLock   headLock 
*   \    /         |         |
*    \  /          |         |
*     uh           tl        hl
********************************************
* Queue shape after a few insertions(not described in this file):
* 
* head        tail
*  ||          ||
*  ||          ||
*  \/   next   \/
*  uh ------> (u)  
*****/

%t = { tprd(producer), tcns(consumer) }
%n = { uh, tl, hl, q }
%p = { 
    is_lock = { uh,tl,hl,q } 
    ready = { tprd, tcns }
    
    rv[head] = { q->uh }
    rv[tail] = { q->uh }
    has[head] = { q }
    has[tail] = { q }
    
    r_by[head] = { uh }
    r_by[tail] = { uh }
    rt[head,n] = { uh }
    rt[tail,n] = { uh }
    
    rv[tailLock] = { q->tl }
    rv[headLock] = { q->hl }
    has[tailLock] = { q }
    has[headLock] = { q }
    r_by[tailLock] = { tl }
    r_by[headLock] = { hl }

    rv[this] = {tprd -> q, tcns -> q}
    has[this] = { tprd, tcns }
    r_by[this] = { q }
    is[this] = { q }
    
    rg[tail,n] = { uh }
    rg[head,n] = { uh }
    rg[tailLock,n] = { tl }
    rg[headLock,n] = { hl }
    rt[tailLock,n] = { tl }
    rt[headLock,n] = { hl }
    
    rt[this,n] = { q }
        
    #ifdef UBT
        sm = { tprd : 1/2, tcns : 1/2 }
        bn = { uh -> uh, q->q, tl->tl,hl->hl,tprd->tprd:1/2, tcns->tcns:1/2 }
    #else
        bn = { uh -> uh, q->q, tl->tl,hl->hl,tprd->tprd, tcns->tcns }
    #endif
}
