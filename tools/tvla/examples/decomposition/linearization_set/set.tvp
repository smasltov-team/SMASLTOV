ls1_dispatch_##TN isChoice(ls1_dispatch_##TN, lds1_1_##TN, delete,TN) lds1_1_##TN                   \
ls1_dispatch_##TN isChoice(ls1_dispatch_##TN, lfs1_1_##TN, find,TN) lfs1_1_##TN                 \


#define SEQUENTIAL3(TN)                                 \
