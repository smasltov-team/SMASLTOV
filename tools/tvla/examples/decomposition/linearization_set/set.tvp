/********************* Actions *******************/

#include "set_stat.tvp"

%action schedule(loc) {
  %t "schedule " + loc
  %f { tr_scheduled(tr) & at[loc](tr) }
  %p tr_scheduled(tr) & at[loc](tr)
}

%action unschedule() {
  %t "unschedule"
  {
    tr_scheduled(tr) = (isthread(tr) ? 1/2 : 0)
  }
}

